    <h1>Orders</h1>

  <div class="container">
    <div class="row">
  <% for ( let i = 0; i < data.length; i++){ %>
    <div class="card" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title"> Name : <%= data[i].name %> </h5>
          <p class="card-text"> Side : <%= data[i].side %> </p> 
           <p class="card-text"> Drink: <%= data[i].drink %></p> 
         <p class="card-text"> Meat : <%= data[i].meat %> </p>
        <p class="card-text"> Date : <%= data[i].date %> </p>
        <p class="card-text"> Dessert : <%= data[i].dessert%> </p>
          <p class="card-text"> Email: <%= data[i].email %> </p>             
          
